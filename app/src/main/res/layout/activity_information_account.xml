<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hali.pro.com.haliyikama.ServisResources.InformationAccount">


    <TextView
        android:id="@+id/lblMusteri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:background="#f2dddd"
        android:text="Müşteri No:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtMusteriID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"


        android:layout_toEndOf="@+id/lblMusteri"
        android:layout_toRightOf="@+id/lblMusteri"
        android:background="#f2dddd"
        android:text="34:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/lblCari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblMusteri"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Cari Adı:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtCari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblCari"
        android:layout_centerHorizontal="true"
        android:background="#f2dddd"

        android:text="Protech Bilişim"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/lblTelefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblCari"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Telefon:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtTelefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblCari"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="23dp"

        android:layout_marginTop="30dp"
        android:background="#f2dddd"
        android:text="555 563 5353"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/lblTelefon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblTelefon"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Telefon2:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtTelefon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtTelefon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="318 245 7645"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/lblGSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblTelefon2"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="GSM:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtGSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtTelefon2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="537 561 7150"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/lblAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblGSM"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Adress:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtGSM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Özevler Mahallesi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/lblBolge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblAdress"


        android:layout_marginTop="70dp"

        android:background="#f2dddd"
        android:text="Bölge:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtBolge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAdress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"

        android:background="#f2dddd"
        android:text="Ankara"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/lblBakiye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lblBolge"


        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="Bakiye:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txtBakiye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtBolge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:background="#f2dddd"
        android:text="0.00 TL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btnYazdir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblBakiye"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/txtMusteriID"
        android:layout_toStartOf="@+id/txtMusteriID"
        android:text="Yazdır" />

    <Button
        android:id="@+id/btnSepeteEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtCari"
        android:layout_alignRight="@+id/txtCari"
        android:layout_alignTop="@+id/btnYazdir"
        android:text="Sepete Ekle" />


</RelativeLayout>
