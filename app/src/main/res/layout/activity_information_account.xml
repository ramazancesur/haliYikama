<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:padding="10dip">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Müşteri Adı Soyadı"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lblSiparisMusteriAdiSoyadi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="70"
                        android:inputType="text"
                        android:text="ramazan cesur" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Müşteri Notu"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtMusteriNotu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="70"
                        android:hint="Musteri İsteği"
                        android:inputType="textImeMultiLine" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="100">

                    <TextView
                        android:id="@+id/lblAdres"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Satıcı Notu"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtSaticiNotu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:hint="Satıcının Notları"
                        android:inputType="textImeMultiLine" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Siparis Teslim Tarihi"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtTeslimTarihi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="70"
                        android:inputType="datetime"
                        android:text="2017 Temmuz" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Müşteri Toplam Borcu"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lblMusteriToplamBorc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="70"
                        android:inputType="text"
                        android:text="0.0 TL" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Siparis Tutari"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txtSiparisTutar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="70"
                        android:inputType="text"
                        android:text="0.0 TL" />
                </TableRow>


                <TableRow
                    android:id="@+id/rowMusteriEkleme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <Button
                        android:id="@+id/btnYeniSiparisEkle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Yeni Siparis Ekle" />

                    <Button
                        android:id="@+id/btnSiparisKaydet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kaydet" />
                </TableRow>

                <TableRow
                    android:id="@+id/rowMusteriSilme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <Button
                        android:id="@+id/btnSiparisGuncelle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kaydı Güncelle" />

                    <Button
                        android:id="@+id/btnMusteriSil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Kaydı Sil" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <Button
                        android:id="@+id/btnSiparisDetayi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Siparis Detayı" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>